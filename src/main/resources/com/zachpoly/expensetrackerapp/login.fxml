      <Label layoutX="26.0" layoutY="112.0" text="Username" />
      <TextField fx:id="usernameTextField" layoutX="84.0" layoutY="108.0" prefHeight="26.0" prefWidth="185.0" promptText="Username" />
      <Label layoutX="26.0" layoutY="162.0" text="Password" />
      <PasswordField fx:id="passwordField" layoutX="83.0" layoutY="158.0" prefHeight="26.0" prefWidth="186.0" promptText="Password" />
      <Button fx:id="loginButton" layoutX="24.0" layoutY="226.0" mnemonicParsing="false" onAction="#loginButtonOnAction" prefHeight="26.0" prefWidth="246.0" text="Login" />
      <Button fx:id="cancelButton" layoutX="26.0" layoutY="266.0" mnemonicParsing="false" onAction="#cancelButtonOnAction" prefHeight="26.0" prefWidth="246.0" text="Cancel" />
